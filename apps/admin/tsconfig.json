{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@telli/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "baseUrl": ["."],
      "@/*": ["./src/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@shared/*": ["../../packages/shared/src/*"]
    }
  },
  "types": ["node"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next.config.mjs",
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
