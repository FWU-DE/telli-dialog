{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "2.0.0",
  "extends": "./base.json",

  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@ui/components/*": ["../../packages/ui/src/components/*"],
      "@ui/components/ui/*": ["../../packages/ui/src/components/*"]
    }
  }
}
